{
  "name": "corecanvas",
  "version": "1.0.0",
  "private": true,
  "description": "Designer e stampante etichette ZPL per stampanti Zebra",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=@corecanvas/backend",
    "dev:frontend": "npm run dev --workspace=@corecanvas/frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "npm run build --workspace=@corecanvas/backend",
    "build:frontend": "npm run build --workspace=@corecanvas/frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "prisma:generate": "npm run prisma:generate --workspace=@corecanvas/backend",
    "prisma:migrate": "npm run prisma:migrate --workspace=@corecanvas/backend",
    "prisma:studio": "npm run prisma:studio --workspace=@corecanvas/backend",
    "prisma:seed": "npm run prisma:seed --workspace=@corecanvas/backend"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@mui/icons-material": "^7.3.7",
    "@prisma/client": "^6.17.1",
    "@tanstack/react-query": "^5.90.2",
    "sharp": "^0.34.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
